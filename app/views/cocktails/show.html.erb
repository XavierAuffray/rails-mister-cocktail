<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.url %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container  text-left ">
  <h2 class="py-5">INGREDIENTS</h2>
  <ul class="list-unstyled list">
    <% @cocktail.doses.each do |dose| %>
      <li class="my-1">
        <%= dose.description %>
        of <%= dose.ingredient.name %> <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
    <li class="add mt-3">
      <p><%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %></p>
    </li>
  </ul>
</div>

<div class="options text-center ">
  <p><%= link_to 'Back', cocktails_path %></p>
</div>
