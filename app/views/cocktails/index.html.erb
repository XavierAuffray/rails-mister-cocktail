<h1>Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <%= link_to 'Destroy',  { action: :destroy, id: cocktail.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a new Cocktail', new_cocktail_path %>

<i class="fas fa-trash-alt"></i>
